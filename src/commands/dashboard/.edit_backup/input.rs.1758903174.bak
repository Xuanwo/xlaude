use anyhow::Result;
use crossterm::event::{KeyCode, KeyEvent};
use crate::state::XlaudeState;
use super::state::{DashboardMode, DashboardState};

pub enum InputResult {
    Exit,
    Attach(String),
    CreateWorktree(Option<String>, Option<String>),
    Continue,
}

pub fn handle_input(
    key: KeyEvent,
    state: &mut DashboardState,
    xlaude_state: &mut XlaudeState,
) -> Result<InputResult> {
    match &mut state.mode {
        DashboardMode::Help => {
            state.mode = DashboardMode::Normal;
            return Ok(InputResult::Continue);
        }
        DashboardMode::Config { editor_input } => {
            return handle_config_input(key, state, xlaude_state, editor_input);
        }
        DashboardMode::Create { input, repo } => {
            return handle_create_input(key, state, input, repo);
        }
        DashboardMode::Normal => {
            return handle_normal_input(key, state);
        }
    }
}

fn handle_config_input(
    key: KeyEvent,
    state: &mut DashboardState,
    xlaude_state: &mut XlaudeState,
    editor_input: &mut String,
) -> Result<InputResult> {
    match key.code {
        KeyCode::Esc => {
            state.mode = DashboardMode::Normal;
        }
        KeyCode::Enter => {
            let editor = editor_input.trim();
            if !editor.is_empty() {
                xlaude_state.editor = Some(editor.to_string());
                xlaude_state.save()?;
                state.set_status_message(format!("âœ… Editor set to: {}", editor));
            }
            state.mode = DashboardMode::Normal;
        }
        KeyCode::Backspace => {
            editor_input.pop();
        }
        KeyCode::Char(c) => {
            editor_input.push(c);
        }
        _ => {}
    }
    Ok(InputResult::Continue)
}

fn handle_create_input(
    key: KeyEvent,
    state: &mut DashboardState,
    input: &mut String,
    repo: &Option<String>,
) -> Result<InputResult> {
    match key.code {
        KeyCode::Esc => {
            state.mode = DashboardMode::Normal;
        }
        KeyCode::Enter => {
            let name = if input.trim().is_empty() {
                None
            } else {
                Some(input.trim().to_string())
            };
            let repo = repo.clone();
            state.mode = DashboardMode::Normal;
            return Ok(InputResult::CreateWorktree(name, repo));
        }
        KeyCode::Backspace => {
            input.pop();
        }
        KeyCode::Char(c) => {
            if c.is_alphanumeric() || c == '-' || c == '_' {
                input.push(c);
            }
        }
        _ => {}
    }
    Ok(InputResult::Continue)
}

fn handle_normal_input(key: KeyEvent, state: &mut DashboardState) -> Result<InputResult> {
    match key.code {
        KeyCode::Char('q' | 'Q') => {
            return Ok(InputResult::Exit);
        }
        KeyCode::Char('?' | 'h') => {
            state.mode = DashboardMode::Help;
        }
        KeyCode::Up | KeyCode::Char('k') => {
            state.move_selection_up();
        }
        KeyCode::Down | KeyCode::Char('j') => {
            state.move_selection_down();
        }
        KeyCode::Enter => {
            if let Some(worktree) = state.get_selected_worktree() {
                return Ok(InputResult::Attach(worktree.name.clone()));
            }
        }
        KeyCode::Char('n' | 'N') => {
            let repo = if let Some(worktree) = state.get_selected_worktree() {
                Some(worktree.repo.clone())
            } else {
                state.worktrees.first().map(|w| w.repo.clone())
            };

            state.mode = DashboardMode::Create {
                input: String::new(),
                repo,
            };
        }
        KeyCode::Char('d' | 'D') => {
            if let Some(worktree) = state.get_selected_worktree() {
                if worktree.has_session {
                    // This will be handled by the caller
                    // We just mark that we want to delete this session
                }
            }
        }
        KeyCode::Char('r' | 'R') => {
            // Refresh will be handled by the caller
        }
        KeyCode::Char('c' | 'C') => {
            let editor_input = state
                .worktrees
                .first()
                .map(|_| String::new()) // We'll need to get the actual editor from state
                .unwrap_or_default();

            state.mode = DashboardMode::Config { editor_input };
        }
        _ => {}
    }

    Ok(InputResult::Continue)
}